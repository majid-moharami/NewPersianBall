<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presenter.feature.shopping.address.add.AddAddressActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layoutDirection="ltr"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardBackgroundColor="#7C8EC2"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_arrow_left" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="نام آدرس"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="13dp">

                        <EditText
                            android:id="@+id/address_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/map_ic"
                            android:fontFamily="@font/iran_sans"
                            android:hint="منزل"
                            android:gravity="right"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textSize="@dimen/font_size_medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/map_figma" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="شماره همراه*"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="13dp">

                        <EditText
                            android:id="@+id/phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:inputType="number"
                            android:background="@color/white"
                            android:gravity="right"
                            android:drawableLeft="@drawable/call_mobile"
                            android:fontFamily="@font/iran_sans"
                            android:hint="09121234567"
                            android:padding="5dp"
                            android:textSize="@dimen/font_size_medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="استان*"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="13dp">

                        <EditText
                            android:id="@+id/province"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            android:fontFamily="@font/iran_sans"
                            android:hint="هرمزگان"
                            android:padding="5dp"
                            android:gravity="right"
                            android:textSize="@dimen/font_size_medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="شهرستان*"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="13dp">

                        <EditText
                            android:id="@+id/eparchy"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            android:fontFamily="@font/iran_sans"
                            android:hint="میناب"
                            android:gravity="right"
                            android:padding="5dp"
                            android:textSize="@dimen/font_size_medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="آدرس*"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="13dp">

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/address_location"
                            android:drawablePadding="8dp"
                            android:gravity="right"
                            android:fontFamily="@font/iran_sans"
                            android:hint=" بلوار امام خمینی(ره)، روبروی فرهنگسرای،
کوچه شهید بهشتی پلاک1"
                            android:padding="5dp"
                            android:textSize="@dimen/font_size_medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="کد پستی*"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="13dp">

                        <EditText
                            android:id="@+id/postal_code"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            android:fontFamily="@font/iran_sans"
                            android:hint="(10رقمی)1234567899"
                            android:gravity="right"
                            android:padding="5dp"
                            android:minLines="10"
                            android:maxLines="10"
                            android:inputType="number"
                            android:textSize="@dimen/font_size_medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="تلفن ثابت"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="13dp">

                        <EditText
                            android:id="@+id/home_phone"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/call_home"
                            android:fontFamily="@font/iran_sans"
                            android:hint="021-12345678 (همراه با پیش شماره)"
                            android:gravity="right"
                            android:padding="5dp"
                            android:inputType="number"
                            android:textSize="@dimen/font_size_medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="ایمیل"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="13dp">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/ic_profile_email"
                            android:fontFamily="@font/iran_sans"
                            android:hint="persianball@gmail.com"
                            android:padding="5dp"
                            android:inputType="textEmailAddress"
                            android:gravity="right"
                            android:textSize="@dimen/font_size_medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_btn"
                    android:layout_width="156dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:shadowColor="#6F71AB"
                    app:cardBackgroundColor="#6F71AB"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/iran_sans_bold"
                        android:text="اضافه کردن"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_large" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>