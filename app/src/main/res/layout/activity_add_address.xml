<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.feature.shopping.address.add.AddAddressActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#7C8EC2"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_left" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام آدرس"
                    android:layout_gravity="center"
                    android:fontFamily="@font/iran_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="منزل"
                        android:padding="5dp"
                        android:textSize="@dimen/font_size_medium"
                        android:fontFamily="@font/iran_sans"
                        android:drawableLeft="@drawable/map_ic"
                        android:background="@color/white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/map"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شماره همراه"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iran_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="09148792347"
                        android:fontFamily="@font/iran_sans"
                        android:textAlignment="viewEnd"
                        android:padding="5dp"
                        android:textSize="@dimen/font_size_medium"
                        android:drawableLeft="@drawable/call_mobile"
                        android:background="@color/white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="استان"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iran_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="استان خود را انتخاب کنید."
                        android:textAlignment="viewEnd"
                        android:fontFamily="@font/iran_sans"
                        android:padding="5dp"
                        android:textSize="@dimen/font_size_medium"
                        android:background="@color/white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شهرستان"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iran_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="میناب"
                        android:textAlignment="viewEnd"
                        android:padding="5dp"
                        android:textSize="@dimen/font_size_medium"
                        android:fontFamily="@font/iran_sans"
                        android:background="@color/white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آدرس"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iran_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="استان هرمزگان، شهرستان میناب، بلوار امام خمینی(ره)، روبروی فرهنگسرای
شهید بهشتی"
                        android:textAlignment="viewEnd"
                        android:padding="5dp"
                        android:fontFamily="@font/iran_sans"
                        android:drawablePadding="8dp"
                        android:textSize="@dimen/font_size_medium"
                        android:drawableLeft="@drawable/address_location"
                        android:background="@color/white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="کد پستی"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iran_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="12345678"
                        android:fontFamily="@font/iran_sans"
                        android:textAlignment="viewEnd"
                        android:padding="5dp"
                        android:textSize="@dimen/font_size_medium"
                        android:background="@color/white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تلفن ثابت"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iran_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="02122222"
                        android:fontFamily="@font/iran_sans"
                        android:textAlignment="viewEnd"
                        android:padding="5dp"
                        android:textSize="@dimen/font_size_medium"
                        android:drawableLeft="@drawable/call_home"
                        android:background="@color/white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="156dp"
                android:layout_height="46dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:shadowColor="#6F71AB"
                app:cardBackgroundColor="#6F71AB"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/iran_sans_bold"
                    android:text="اضافه کردن"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_large" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>