<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presenter.feature.profile.address.AddressFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ir.pattern.persianball.views.PersianBallTextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:drawableRight="@drawable/ic_frame"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/iran_sans_bold"
                    android:text="نمایش اطلاعات شخصی "
                    android:textColor="#6F71AB"
                    android:textSize="13sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/latin_name_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:drawableRight="@drawable/ic_profile_name"
                                android:drawablePadding="5dp"
                                android:text="نام لاتین"
                                android:textColor="#6F71AB"
                                android:textSize="10sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/latin_name_persianBallImageButton"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/latin_name_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/iran_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="@+id/latin_name_title"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/latin_name_persianBallImageButton"
                                app:layout_constraintTop_toBottomOf="@+id/latin_name_title" />

                            <ImageView
                                android:id="@+id/latin_name_persianBallImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_edit_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/name_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:drawableRight="@drawable/ic_profile_name"
                                android:drawablePadding="5dp"
                                android:text="نام"
                                android:textColor="#6F71AB"
                                android:textSize="10sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/name_persianBallImageButton"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/name_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/iran_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="@+id/name_title"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/name_persianBallImageButton"
                                app:layout_constraintTop_toBottomOf="@+id/name_title" />

                            <ImageView
                                android:id="@+id/name_persianBallImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_edit_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/latin_family_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:drawableRight="@drawable/ic_profile_name"
                                android:drawablePadding="5dp"
                                android:text="نام خانوادگی لاتین"
                                android:textColor="#6F71AB"
                                android:textSize="10sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/latin_family_persianBallImageButton"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/latin_family_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/iran_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="@+id/latin_family_title"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/latin_family_persianBallImageButton"
                                app:layout_constraintTop_toBottomOf="@+id/latin_family_title" />

                            <ImageView
                                android:id="@+id/latin_family_persianBallImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_edit_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/family_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:drawableRight="@drawable/ic_profile_name"
                                android:drawablePadding="5dp"
                                android:text="نام خانوادگی"
                                android:textColor="#6F71AB"
                                android:textSize="10sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/family_persianBallImageButton"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/family_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/iran_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="@+id/family_title"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/family_persianBallImageButton"
                                app:layout_constraintTop_toBottomOf="@+id/family_title" />

                            <ImageView
                                android:id="@+id/family_persianBallImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_edit_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/nation_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:drawableRight="@drawable/ic_profile_nationality"
                                android:drawablePadding="5dp"
                                android:text="ملیت"
                                android:textColor="#6F71AB"
                                android:textSize="10sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/nation_persianBallImageButton"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/nation_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/iran_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="@+id/nation_title"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/nation_persianBallImageButton"
                                app:layout_constraintTop_toBottomOf="@+id/nation_title" />

                            <ImageView
                                android:id="@+id/nation_persianBallImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_edit_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/birthdate_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:drawableRight="@drawable/ic_profile_birthday"
                                android:drawablePadding="5dp"
                                android:text="تاریخ تولد"
                                android:textColor="#6F71AB"
                                android:textSize="10sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/bithdate_persianBallImageButton"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/bithdate_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/iran_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="@+id/birthdate_title"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/bithdate_persianBallImageButton"
                                app:layout_constraintTop_toBottomOf="@+id/birthdate_title" />

                            <ImageView
                                android:id="@+id/bithdate_persianBallImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_edit_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/gender_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:drawableRight="@drawable/ic_frame"
                                android:drawablePadding="5dp"
                                android:text="جنسیت"
                                android:textColor="#6F71AB"
                                android:textSize="10sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/gender_persianBallImageButton"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/gender_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/iran_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="@+id/gender_title"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/gender_persianBallImageButton"
                                app:layout_constraintTop_toBottomOf="@+id/gender_title" />

                            <ImageView
                                android:id="@+id/gender_persianBallImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_edit_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/national_code_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:drawableRight="@drawable/ic_proflile_national_code"
                                android:drawablePadding="5dp"
                                android:text="کد ملی"
                                android:textColor="#6F71AB"
                                android:textSize="10sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/national_code_persianBallImageButton"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ir.pattern.persianball.views.PersianBallTextView
                                android:id="@+id/national_code_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/iran_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="@+id/national_code_title"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintLeft_toRightOf="@+id/national_code_persianBallImageButton"
                                app:layout_constraintTop_toBottomOf="@+id/national_code_title" />

                            <ImageView
                                android:id="@+id/national_code_persianBallImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_edit_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view">

                    <ir.pattern.persianball.views.PersianBallTextView
                        android:id="@+id/submit_btn"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@drawable/login_icon_bachground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/iran_sans_bold"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
